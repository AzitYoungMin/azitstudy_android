<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dday_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/event_rbtn"
            android:layout_gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radiobutton" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/event_rbtn"
            android:orientation="vertical">

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015/09/06"
                android:layout_marginBottom="3dp"
                android:textColor="#b2b2b2" />

            <TextView
                android:id="@+id/title"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중간고사"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/dday"
            android:layout_width="wrap_content"
            android:text="D-10"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1FB4FF"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/next_btn"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/next_btn"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:background="@drawable/next_black"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>