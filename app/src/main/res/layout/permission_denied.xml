<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_denied"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#34393D"
        android:padding="30dp">

        <TextView
            android:id="@+id/denied_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="권한이 없습니다."
            android:textColor="#FFFFFF"
            android:textSize="28dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/denied_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="멘티 관리하기 서비스를 신청해 주세요 :)"
            android:textColor="#b2b2b2"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_above="@+id/request_ll"
        android:id="@+id/layout_menti_mangage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/layout_denied">

        <ImageView
            android:id="@+id/azitservice_request_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:src="@drawable/azitservice_request_icon" />

        <View
            android:id="@+id/line_denied1"
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:layout_below="@+id/azitservice_request_img"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center_horizontal"
            android:background="#1FB4FF" />

        <TextView
            android:id="@+id/text_mentimanage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_denied1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="'멘티 관리하기'란?"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_mentimanage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_mentimanage1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="학생들에게 학습 노하우나 나만의 공부법, 경험공유,\n대인관계, 비전 등에 대한 조언과 도움으로\n멘티를 이글어주는 역할을 합니다."
            android:textColor="#5d5d5d"
            android:textSize="14dp" />

        <View
            android:id="@+id/line_denied2"
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:layout_below="@+id/text_mentimanage2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="40dp"
            android:background="#1FB4FF" />

        <TextView
            android:id="@+id/text_mentimanage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_denied2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="주요활동"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_mentimanage4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_mentimanage3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="나의 학생에 대한 기록표들을 체크해 주고\n 개인질문에 답변을 해줄 수 있으며,\n 기록표에 관한 알림이나 공지사항을\n 전달 해줄 수 있습니다."
            android:textColor="#5d5d5d"
            android:textSize="14dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/request_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#e9e9e9"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/azit_service_request" />
    </RelativeLayout>
</RelativeLayout>