<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_schedule_type"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_icon_item"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_type_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layout_icon_item"
            android:layout_centerInParent="true"
            android:background="@color/schedule_color_gray"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="여가활동"
            android:textSize="12sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/img_schedule_plus"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/img_delete_schedule_type"
        android:visibility="gone" />

</RelativeLayout>
